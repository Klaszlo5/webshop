{
  "name": "webshop-backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",  # Used for production
    "build": "tsc"  # TypeScript compiler to build the app
  },
  "dependencies": {
    "express": "^4.17.1",  # Web framework for Node.js
    "typeorm": "^0.2.41",  # ORM for database interaction
    "pg": "^8.7.1",  # PostgreSQL client for Node.js
    "cors": "^2.8.5",  # To allow cross-origin requests (e.g., frontend -> backend)
    "typescript": "^4.5.4",  # TypeScript support
    "ts-node-dev": "^1.1.8",  # To run TypeScript in development mode
    "body-parser": "^1.19.0"  # To parse request bodies
  },
  "devDependencies": {
    "@types/node": "^16.11.6",  # TypeScript types for Node.js
    "@types/express": "^4.17.13",  # TypeScript types for Express
    "@types/pg": "^8.6.4"  # TypeScript types for PostgreSQL
  }
}